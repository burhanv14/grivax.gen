generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id   String   @id @default(cuid()) 
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([user_id])
}

model Course {
  id          String   @id @default(cuid())
  userId      String
  title       String
  difficulty String
  pace      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}



