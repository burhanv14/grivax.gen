generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id   String   @id @default(cuid()) 
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  course_id          String   @id @default(cuid())
  user_id      String
  title       String
  difficulty  String
  pace        String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}



